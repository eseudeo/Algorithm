#include <stdio.h>
int main() {
	int a,i,j;
	int n; 
	scanf("%d", &a);
	n = (a + 1) / 2;
	if (a % 2 == 0) {
		printf("I LOVE CBNU");
	}
	else {
		for (i = 0;i < a;i++) {
			printf("*");
		}
		printf("\n");

		for (i = 0;i < n;i++) {
			for (j = n - 1;i < j;j--) {
				printf(" ");
			}
			for (j = i;j <= i;j++) {
				printf("*");
			}
			for (j = 1;j < 2 * (i+1) - 2;j++) {
				printf(" ");
			}
			for (j = i;j <= i&&j>0;j++) {
				printf("*");
			}
			printf("\n");
		}
	}
	return 0;
}
